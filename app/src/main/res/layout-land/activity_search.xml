<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.vov4ik.quotes.SearchActivity"
        android:background="@drawable/land_theme_3"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/search_the_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="@dimen/big_text"
            android:text="@string/author_in_search_activity"
            android:padding="5dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/search_the_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="@dimen/big_text"
            android:text="@string/tag_in_searching_activity"
            android:padding="5dp"
            android:layout_gravity="top|right"
            android:gravity="top|start|right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapForInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_for_login"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:touchscreenBlocksFocus="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp">
            <AutoCompleteTextView
                android:id="@+id/search_this_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/big_text"
                android:textColor="@color/textForRegistration"
                android:focusable="true"
                android:autoText="false"
                android:contextClickable="false"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/startSearching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_for_black"
            android:text="@string/findButtonInSearching"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right">
        <TextView
            android:id="@+id/showAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/showAllText"
            android:textSize="@dimen/big_text"
            android:textColor="@color/textForRegistration"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_for_textview_in_searching"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/showAll">
            <LinearLayout
                android:id="@+id/layoutForShowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textSize="15sp"
                android:padding="12dp"
                >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
