<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vov4ik.quotes.GameActivity"
    tools:showIn="@layout/activity_game"
    android:background="@drawable/main_theme_3">
    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="7dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_for_black"/>
    <TextView
        android:id="@+id/playersRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="7dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_for_black"/>
    <TextView
        android:id="@+id/quoteGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:background="@drawable/shape"
        android:layout_marginBottom="29dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/authorsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:textSize="15sp"
        android:padding="7dp"/>
   <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_black"
        android:text="NEXT"
        android:textColor="@color/colorWhite"
        android:onClick="onClick"
        android:layout_below="@+id/quoteGame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
