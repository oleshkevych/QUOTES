<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vov4ik.quotes.SearchActivity">

    <TextView
        android:id="@+id/search_the_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="@dimen/big_text"
        android:text="@string/author_in_search_activity"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/search_the_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="@dimen/big_text"
        android:text="@string/tag_in_searching_activity"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>
    <AutoCompleteTextView
        android:id="@+id/search_this_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint1_for_search"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/textForRegistration"/>
</RelativeLayout>
