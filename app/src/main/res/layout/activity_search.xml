<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vov4ik.quotes.SearchActivity"
    android:background="@drawable/main_theme_1">

    <TextView
        android:id="@+id/search_the_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="@dimen/big_text"
        android:text="@string/author_in_search_activity"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/search_the_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textSize="@dimen/big_text"
        android:text="@string/tag_in_searching_activity"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapForInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_login"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="150dp"
        android:padding="5dp">
    <AutoCompleteTextView
        android:id="@+id/search_this_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_for_search"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="@dimen/big_text"
        android:textColor="@color/textForRegistration"
        />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/startSearching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_black"
        android:text="Find"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/wrapForInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/showAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showAllText"
        android:textSize="@dimen/big_text"
        android:textColor="@color/colorForTextOnShowButton"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/startSearching"
        android:background="@drawable/shape_for_textview_in_searching"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/showAll"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/layoutForShowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="15sp"
            android:padding="12dp"
            >
    </LinearLayout>
</ScrollView>

</RelativeLayout>
